{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2020", // Node.js 14
		"lib": [
			"es2020"
		],

		// TODO: Remove these at some point.
		"module": "ES2020",
		"moduleResolution": "node",
		"noPropertyAccessFromIndexSignature": false,
		"isolatedModules": true
	},
	"include": [
		"source",
		"test",
		"benchmark"
	],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}
